package Actividad1;

public class Raices {
	//Atributos
	
	public double a;
	public double b;
	public double c;
	
	//Constructor por defecto
	public Raices() {
		
	}
	//Constructor con parametros
	public Raices(double a,double b,double c) {
		this.a = a;
		this.b = b;
		this.c = c;
	}
	
	public double getA() {
		return a;
	}
	public double getB() {
		return b;
	}
	public double getC() {
		return c;
	}//Metodo unica raiz
	public boolean tieneRaiz() {
		boolean unicasol = false;
		if((b*b)-4*a*c == 0) {
			 return unicasol = true;
		}
		return unicasol;
	}
	//Metodo averiguar si tiene 2 raices
	public boolean tieneRaices() {
		boolean dosraices = false;
		if((b*b)-4*a*c > 0) {
			return dosraices = true;
		}
		return dosraices;
	}
	
	//Metodo Obtener Discriminante
	public double getDiscriminante() {
		double discriminante = (b*b)-4*a*c;
		return discriminante;
	}
	
}
